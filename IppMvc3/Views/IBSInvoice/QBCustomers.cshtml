@model List<IntuitSampleMVC.Models.CustomerUI>
@{
    ViewBag.Title = "QBCustomers";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Get the Type object corresponding to MyClass.
    Type myType = @Model.FirstOrDefault().CustEmpVendorObj.GetType();
    // Get the PropertyInfo object by passing the property name.
    System.Reflection.PropertyInfo[] myPropInfo = myType.GetProperties();
     
    
}
3
<h2>QBCustomers</h2>

@using (Html.BeginForm("NewInvoice", "IBSInvoice"))
{
    <p>
        @Html.ActionLink("Create New", "Create")

        <br />
        <input type="submit" value="Create new invoice" />
    </p>
    <table>
        @foreach (var item in Model)
        {          
            <tr>
                @foreach (var propObj in myPropInfo)
                {
                    var temp = propObj.GetValue(item.CustEmpVendorObj, null);
                    if (Convert.GetTypeCode(temp) != TypeCode.Object)
                    {
                        if (temp != null)
                        {
                            if (Model.IndexOf(item) == 0)
                            {
                           
                    <th>
                        @Html.DisplayFor(x => propObj.Name)
                    </th> 
                           
                            }
                            else
                            {
                          
                    <td>
                        @temp.ToString()
                    </td> 
                            
                            }
                        }
                    }
                }
            </tr>  
        }

    </table>  
 
}
