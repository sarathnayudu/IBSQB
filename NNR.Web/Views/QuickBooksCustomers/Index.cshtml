@model IEnumerable<NNR.Web.Models.Customers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-responsive">
    <h4>Customers</h4>

    <table class="table">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Balance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreditLimit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullyQualifiedName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.TotalExpense)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Balance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreditLimit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullyQualifiedName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.TotalExpense)
                    </td>
                    <td>
                        <p>
                            @Html.ActionLink("Invoice", "Index", "Invoice", new { custqbId = item.Id }, null)
                        </p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
